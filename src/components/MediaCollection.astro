<script is:inline>
  // éŸ³ä¹æ’­æ”¾å™¨æ§åˆ¶
  (function() {
    let currentPlayingAudio = null;
    let currentPlayingPlayer = null;

    // æ ¼å¼åŒ–æ—¶é—´
    function formatTime(seconds) {
      if (isNaN(seconds) || !isFinite(seconds)) return '0:00';
      const mins = Math.floor(seconds / 60);
      const secs = Math.floor(seconds % 60);
      return `${mins}:${secs.toString().padStart(2, '0')}`;
    }

    // åˆå§‹åŒ–æ‰€æœ‰éŸ³ä¹æ’­æ”¾å™¨
    document.querySelectorAll('.music-player').forEach(player => {
      const audio = player.querySelector('.audio-element');
      const playBtn = player.querySelector('.play-btn');
      const playIcon = player.querySelector('.play-icon');
      const pauseIcon = player.querySelector('.pause-icon');
      const progressBar = player.querySelector('.progress-bar');
      const progressFill = player.querySelector('.progress-fill');
      const progressHandle = player.querySelector('.progress-handle');
      const currentTimeEl = player.querySelector('.current-time');
      const durationEl = player.querySelector('.duration');
      const downloadBtn = player.querySelector('.download-btn');
      const playingIndicator = player.querySelector('.playing-indicator');

      // åŠ è½½å…ƒæ•°æ®åæ˜¾ç¤ºæ—¶é•¿
      audio.addEventListener('loadedmetadata', () => {
        durationEl.textContent = formatTime(audio.duration);
      });

      // æ’­æ”¾/æš‚åœåˆ‡æ¢
      playBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        
        if (currentPlayingAudio && currentPlayingAudio !== audio) {
          // æš‚åœå…¶ä»–æ­£åœ¨æ’­æ”¾çš„éŸ³é¢‘
          currentPlayingAudio.pause();
          currentPlayingPlayer.classList.remove('playing');
          currentPlayingPlayer.querySelector('.play-icon').classList.remove('hidden');
          currentPlayingPlayer.querySelector('.pause-icon').classList.add('hidden');
          currentPlayingPlayer.querySelector('.playing-indicator').classList.add('hidden');
        }

        if (audio.paused) {
          audio.play();
          player.classList.add('playing');
          playIcon.classList.add('hidden');
          pauseIcon.classList.remove('hidden');
          playingIndicator.classList.remove('hidden');
          currentPlayingAudio = audio;
          currentPlayingPlayer = player;
        } else {
          audio.pause();
          player.classList.remove('playing');
          playIcon.classList.remove('hidden');
          pauseIcon.classList.add('hidden');
          playingIndicator.classList.add('hidden');
          currentPlayingAudio = null;
          currentPlayingPlayer = null;
        }
      });

      // æ›´æ–°è¿›åº¦
      audio.addEventListener('timeupdate', () => {
        const progress = (audio.currentTime / audio.duration) * 100;
        progressFill.style.width = `${progress}%`;
        progressHandle.style.left = `${progress}%`;
        currentTimeEl.textContent = formatTime(audio.currentTime);
      });

      // æ’­æ”¾ç»“æŸ
      audio.addEventListener('ended', () => {
        player.classList.remove('playing');
        playIcon.classList.remove('hidden');
        pauseIcon.classList.add('hidden');
        playingIndicator.classList.add('hidden');
        progressFill.style.width = '0%';
        progressHandle.style.left = '0%';
        currentTimeEl.textContent = '0:00';
        currentPlayingAudio = null;
        currentPlayingPlayer = null;
      });

      // è¿›åº¦æ¡ç‚¹å‡»è·³è½¬
      progressBar.addEventListener('click', (e) => {
        const rect = progressBar.getBoundingClientRect();
        const percent = (e.clientX - rect.left) / rect.width;
        audio.currentTime = percent * audio.duration;
      });

      // è¿›åº¦æ¡æ‹–æ‹½
      let isDragging = false;
      
      progressBar.addEventListener('mousedown', (e) => {
        isDragging = true;
        updateProgress(e);
      });

      document.addEventListener('mousemove', (e) => {
        if (isDragging) {
          updateProgress(e);
        }
      });

      document.addEventListener('mouseup', () => {
        isDragging = false;
      });

      function updateProgress(e) {
        const rect = progressBar.getBoundingClientRect();
        let percent = (e.clientX - rect.left) / rect.width;
        percent = Math.max(0, Math.min(1, percent));
        audio.currentTime = percent * audio.duration;
      }

      // ä¸‹è½½æŒ‰é’®
      downloadBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        const src = audio.querySelector('source').src;
        const title = player.querySelector('.music-title').textContent;
        const a = document.createElement('a');
        a.href = src;
        a.download = `${title}.mp3`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
      });
    });

    // å›¾ç‰‡æŸ¥çœ‹å™¨
    const imageData = [];
    let currentImageIndex = 0;

    document.querySelectorAll('.gallery-item').forEach((item, index) => {
      const img = item.querySelector('img');
      const title = item.querySelector('.image-title').textContent;
      imageData.push({ src: img.src, title });
      
      item.querySelector('.zoom-btn').addEventListener('click', (e) => {
        e.stopPropagation();
        openImageViewer(index);
      });
    });

    const modal = document.getElementById('imageViewerModal');
    const viewerImage = document.getElementById('viewerImage');
    const viewerTitle = document.getElementById('viewerTitle');
    const viewerDownload = document.getElementById('viewerDownload');
    const backdrop = modal.querySelector('.viewer-backdrop');
    const closeBtn = modal.querySelector('.viewer-close');
    const prevBtn = modal.querySelector('.viewer-prev');
    const nextBtn = modal.querySelector('.viewer-next');

    function openImageViewer(index) {
      currentImageIndex = index;
      updateViewer();
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    function closeImageViewer() {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }

    function updateViewer() {
      const image = imageData[currentImageIndex];
      viewerImage.src = image.src;
      viewerImage.alt = image.title;
      viewerTitle.textContent = image.title;
      viewerDownload.href = image.src;
      viewerDownload.download = image.title;
    }

    function showPrev() {
      currentImageIndex = (currentImageIndex - 1 + imageData.length) % imageData.length;
      updateViewer();
    }

    function showNext() {
      currentImageIndex = (currentImageIndex + 1) % imageData.length;
      updateViewer();
    }

    backdrop.addEventListener('click', closeImageViewer);
    closeBtn.addEventListener('click', closeImageViewer);
    prevBtn.addEventListener('click', showPrev);
    nextBtn.addEventListener('click', showNext);

    // é”®ç›˜å¯¼èˆª
    document.addEventListener('keydown', (e) => {
      if (modal.classList.contains('hidden')) return;
      if (e.key === 'Escape') closeImageViewer();
      if (e.key === 'ArrowLeft') showPrev();
      if (e.key === 'ArrowRight') showNext();
    });
  })();
</script>
