---
// SkillTags 组件 - 技能标签列表
interface Props {
  skills: string[];
}

const { skills } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {skills.map(skill => (
    <span class="px-2 py-0.5 text-[11px] rounded-full bg-[var(--color-bg-secondary)] text-[var(--color-accent)] border border-[var(--color-border)]">
      {skill}
    </span>
  ))}
</div>
