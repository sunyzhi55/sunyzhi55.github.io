---
// SidebarCard 组件 - 通用侧边栏卡片容器
interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class:list={["card p-4", className]}>
  {title && (
    <h3 class="text-sm font-black text-[var(--color-text-secondary)] mb-3 flex items-center gap-2">
      {icon && <span>{icon}</span>}
      <span>{title}</span>
    </h3>
  )}
  <slot />
</div>
