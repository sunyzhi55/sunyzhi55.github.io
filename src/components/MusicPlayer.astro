---
// MusicPlayer 组件 - 单个音乐播放器卡片
interface Props {
  title: string;
  artist: string;
  src: string;
  cover: string;
  index: number;
}

const { title, artist, src, cover, index } = Astro.props;
---

<div class="music-player" data-player-index={index}>
  <!-- 封面图片 -->
  <div class="player-gallery">
    <img src={cover} alt={title} loading="lazy" />
    <div class="gallery-overlay">
      <button class="play-btn" aria-label="播放/暂停">
        <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor">
          <path d="M8 5v14l11-7z"/>
        </svg>
        <svg class="pause-icon hidden" viewBox="0 0 24 24" fill="currentColor">
          <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
        </svg>
      </button>
    </div>
    <!-- 播放状态动画 -->
    <div class="playing-indicator hidden">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <!-- 信息区域 -->
  <div class="player-info">
    <h4 class="music-title">{title}</h4>
    <p class="music-artist">{artist}</p>
    
    <!-- 进度条 -->
    <div class="progress-container">
      <div class="progress-bar">
        <div class="progress-fill"></div>
        <div class="progress-handle"></div>
      </div>
      <div class="time-display">
        <span class="current-time">0:00</span>
        <span class="duration">0:00</span>
      </div>
    </div>

    <!-- 控制按钮 -->
    <div class="player-controls">
      <button class="control-btn download-btn" aria-label="下载" title="下载音乐">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7,10 12,15 17,10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- 隐藏的音频元素 -->
  <audio class="audio-element" preload="metadata">
    <source src={src} type="audio/mpeg" />
  </audio>
</div>

<style>
  .music-player {
    background: var(--color-card);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .music-player:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 20px var(--color-shadow);
    transform: translateY(-2px);
  }

  .music-player.playing {
    border-color: var(--color-accent);
    box-shadow: 0 0 20px var(--color-accent), 0 4px 20px var(--color-shadow);
  }

  /* 封面 */
  .player-gallery {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .player-gallery img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease, filter 0.3s ease;
  }

  .music-player:hover .player-gallery img {
    transform: scale(1.05);
  }

  .music-player.playing .player-gallery img {
    filter: brightness(0.8);
  }

  .gallery-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .music-player:hover .gallery-overlay,
  .music-player.playing .gallery-overlay {
    opacity: 1;
  }

  .play-btn {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: var(--color-accent);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .play-btn:hover {
    transform: scale(1.1);
    background: var(--color-accent-light);
  }

  .play-btn svg {
    width: 28px;
    height: 28px;
    color: white;
  }

  .play-btn .play-icon {
    margin-left: 3px;
  }

  .hidden {
    display: none !important;
  }

  /* 播放状态动画 */
  .playing-indicator {
    position: absolute;
    bottom: 8px;
    right: 8px;
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 20px;
    padding: 4px 6px;
    background: rgba(0, 0, 0, 0.6);
    border-radius: 4px;
  }

  .playing-indicator span {
    width: 3px;
    background: var(--color-accent);
    border-radius: 1px;
    animation: soundWave 0.8s ease-in-out infinite;
  }

  .playing-indicator span:nth-child(1) { animation-delay: 0s; height: 8px; }
  .playing-indicator span:nth-child(2) { animation-delay: 0.1s; height: 12px; }
  .playing-indicator span:nth-child(3) { animation-delay: 0.2s; height: 6px; }
  .playing-indicator span:nth-child(4) { animation-delay: 0.3s; height: 10px; }

  @keyframes soundWave {
    0%, 100% { transform: scaleY(0.5); }
    50% { transform: scaleY(1); }
  }

  /* 信息区域 */
  .player-info {
    padding: 12px;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .music-title {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .music-artist {
    font-size: 12px;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* 进度条 */
  .progress-container {
    margin-top: 8px;
  }

  .progress-bar {
    position: relative;
    height: 4px;
    background: var(--color-bg-secondary);
    border-radius: 2px;
    cursor: pointer;
    overflow: visible;
  }

  .progress-fill {
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 0%;
    background: var(--gradient-primary);
    border-radius: 2px;
    transition: width 0.1s linear;
  }

  .progress-handle {
    position: absolute;
    top: 50%;
    left: 0%;
    width: 12px;
    height: 12px;
    background: var(--color-accent);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    opacity: 0;
    transition: opacity 0.2s ease;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  .music-player:hover .progress-handle,
  .music-player.playing .progress-handle {
    opacity: 1;
  }

  .time-display {
    display: flex;
    justify-content: space-between;
    margin-top: 4px;
    font-size: 10px;
    color: var(--color-text-secondary);
  }

  /* 控制按钮 */
  .player-controls {
    display: flex;
    justify-content: flex-end;
    gap: 8px;
    margin-top: 4px;
  }

  .control-btn {
    width: 28px;
    height: 28px;
    border-radius: 6px;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    color: var(--color-text-secondary);
  }

  .control-btn:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .control-btn svg {
    width: 14px;
    height: 14px;
  }
</style>
